{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.1",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-runtime": "^6.26.0",
    "copy": "^0.3.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gql-merge": "^0.0.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "dev": "nodemon -e ts,graphql -x ts-node -r tsconfig-paths/register src/server.ts",
    "lint": "eslint './src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx,js,jsx}'",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/ && cd -",
    "prebuild": "rm -rf dist",
    "build:all": "yarn prebuild && yarn build && yarn postbuild",
    "start": "node ./dist/server.js",
    "types": "graphql-codegen --config codegen.yml",
    "test": "jest"
  },
  "dependencies": {
    "@types/graphql-type-json": "^0.3.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.33",
    "@types/mongoose": "^5.10.0",
    "@types/morgan": "^1.9.2",
    "@types/redis": "^2.8.28",
    "dotenv": "^8.2.0",
    "graphql-type-json": "^0.3.2",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "mongodb": "^3.6.3",
    "mongoose": "^5.10.13",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
